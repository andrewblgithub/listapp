<div class="panel panel-default">
  <div class="panel-body row">
    <%= form_for(@newPost) do |f| %>
      <div class="field col-sm-8">
        <%= f.text_field :content, autofocus: true, class: "form-control", placeholder: "Event Title" %>
      </div>
      <div class='col-sm-4'>
          <div class="form-group">
              <div class='input-group date' id='datetimepicker1'>
                  <%= f.datetime_select :expires_at, class: "form-control", placeholder: "Date and Time" %>
              </div>
          </div>
          <script type="text/javascript">
              $(function () {
                  $('#datetimepicker1').datetimepicker();
              });
          </script>
      </div>
      <div class="col-sm-12">
        <%= f.submit "Add Event", class:"btn btn-submit btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>