<!-- begin row 2 -->
<div class="row">
    <div class="col-xs-8">
        <%= render '/components/post_form' %>
        <% for @p in @posts %>
        <div class="panel panel-default post-panel">
            <div class="panel-body">
                <p class="post-title">
                    <span class="post-owner">
                        <%= User.find(@p.user_id).username %>
                    </span>
                    <span class="post-creation">
                        <%= @p.created_at.to_formatted_s(:short) %>
                    </span>
                </p>
                <p class="post-content"><%= @p.content %></p>
                <p class="post-links">
                    <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-plus g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                    <a href="" style="float:right;">View Conversation</a>
                </p>
            </div>
        </div>
        <% end %>
        <div class="panel panel-default post-panel panel-body">
            <center><a href="#top"><p class="opacity: 0.7;">
                Back to Top<span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
            </p></a></center>
        </div>   
    </div>
    <div class="col-xs-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12">
                        <h4><%= @username %>'s Profile</h4>
                    </div>
                    <div class="col-xs-6" style="opacity: 0.7; font-size: 80%;">
                        POSTED EVENTS<br>
                        <h6 style="font-size: 200%;">16</h6>
                    </div>
                    <div class="col-xs-6" style="opacity: 0.7; font-size: 80%;">
                        SAVED EVENTS<br>
                        <h6 style="font-size: 200%;">15</h6>
                    </div>
                    <div class="col-xs-6" style="opacity: 0.7; font-size: 80%;">
                        CREATED GROUPS<br>
                        <h6 style="font-size: 200%;">2</h6>
                    </div>
                    <div class="col-xs-6" style="opacity: 0.7; font-size: 80%;">
                        JOINED GROUPS<br>
                        <h6 style="font-size: 200%;">4</h6>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Groups</h4>
                <a href="">Group X</a><br>
                <span>12 Events</span><br><br>
                <a href="">Group Y</a><br>
                <span>8 Events</span><br><br>
                <a href="">Group Z</a><br>
                <span>15 Events</span><br><br>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <footer><p style="opacity: .5; font-size: 90%; text-align: center;">
            @ 2017 Listapp About Help Terms Privacy Cookies Ads Info Brand Blog Status Apps Jobs Advertise Business Media Developers</p>
        </footer>
    </div>
</div>