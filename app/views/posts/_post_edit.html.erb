<div class="panel panel-default">
  <div class="panel-body row">
    <%= form_for(@post)do|f| %>
      <div class="field col-sm-12">
          Event Title:
          <%= f.text_field :content, autofocus: true, class: "form-control"%>
      </div>
      <div class="field col-sm-12">
          Event Description:
          <%= f.text_field :description, class: "form-control"%>
      </div>
      <div class="field col-sm-12">
          List: <br>
          <%= f.select :list, Post.uniq.pluck(:list), {}, {:class => "selectpicker", :onchange => "();"}%>
          <div style="float:right;"><%= f.text_field :list, class: "form-control", placeholder: "Or Create New List"%></div>
      </div>
      <div class='col-sm-12'>
          <div class="form-group">
              <div class='input-group date' id='datetimepicker1'>
                  Date and Time:
                  <%= f.datetime_select :expires_at, class: "form-control", placeholder: "Date and Time" %>
              </div>
          </div>
          <script type="text/javascript">
              $(function () {
                  $('#datetimepicker1').datetimepicker();
              });
          </script>
      </div>
      <div class="col-sm-12">
          <%= f.file_field :image %>
          <br>
          <% if f.object.image? %>
              <%= image_tag f.object.image.thumb.url %>
              <%= f.label :remove_image %>
              <%= f.check_box :remove_image %> 
          <% end %>
      </div>
      <div class="col-sm-4 col-sm-offset-8">
          <%= f.submit "Update Event", class:"btn btn-submit btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>

<script type = "text/javascript">
$('.selectpicker').selectpicker({
  liveSearch: true,
  width: 'fit'
});
</script>